<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="6dip">

	<ImageView
			android:id="@+id/icon"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_alignParentTop="true"
			android:layout_marginRight="6dip"
			android:contentDescription="OK"
			android:src="@drawable/abc_btn_check_to_on_mtrl_015"
			android:layout_alignBottom="@+id/validDates"/>

	<TextView
			android:id="@+id/validDates"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dip"
			android:ellipsize="marquee"
			android:singleLine="true"
			android:text="Valid from: to:"
			android:textSize="12sp"
			android:layout_below="@+id/textCN"
			android:layout_toRightOf="@+id/icon"
			android:layout_toEndOf="@+id/icon"/>

	<TextView
			android:id="@+id/textCN"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dip"
			android:ellipsize="marquee"
			android:singleLine="true"
			android:text="CN: "
			android:textSize="12sp"
			android:layout_below="@+id/firstLine"
			android:layout_toRightOf="@+id/icon"
			android:layout_toEndOf="@+id/icon"/>

	<TextView
			android:id="@+id/firstLine"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_alignWithParentIfMissing="true"
			android:layout_toRightOf="@id/icon"
			android:gravity="top"
			android:text="Organisation"
			android:textSize="16sp" />

</RelativeLayout>